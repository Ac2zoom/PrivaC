{
  "name": "PrivaC",
  "version": "1.0",
  "description": "Highlight important ToS sentences.",
  "permissions": ["tabs", "activeTab", "declarativeContent", "storage"],
  "options_page": "options/options.html",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "images/eyes-closed16.png",
      "32": "images/eyes-closed32.png",
      "48": "images/eyes-closed48.png",
      "128": "images/eyes-closed128.png"
    }
  },
  "icons": {
    "16": "images/eyes16.png",
    "32": "images/eyes32.png",
    "48": "images/eyes48.png",
    "128": "images/eyes128.png"
  },
  "manifest_version": 2
}
